<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Start Game</title>
  <!-- TODO: Add a fav icon here -->

  <%- include('_partials/commonCssHeaders.ejs') -%>

    <!-- Page Custom CSS - game_styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="/assets/css/index_styles.css">
    <link rel="stylesheet" href="/assets/css/ios_toggle.css">
</head>

<body>
  <div class="container">

    <!-- Portrait Mode Overlay -->
    <div class="flip-overlay">
      <img src="/assets/img/Overlays/flipPhone.svg" alt="flip to phone">
      <span class="portrait">FLIP TO PLAY</span>
    </div>

    <!-- Map Selection -->
    <div class="map-selection-container">
      <div class="map-selection-label">
        <span>Battleground:</span>
      </div>
      <div class="map-selection-button animate__animated animate__pulse animate__infinite"></div>
    </div>

    <div class="logo floating">
      <img src="/assets/img/GUI-controls/MenuStart/Game Title-01.svg" alt="">
    </div>

    <div class="indexWrapper">
      <div class="play-mode-toggle-container">
        <span>Play Online:</span>
        <div class="toggleWrapper">
          <input type="checkbox" name="toggle1" class="mobileToggle" id="toggle1">
          <label for="toggle1" class="toggleLabel"></label>
        </div>
      </div>

      <div class="start">
        <p class="title-enter-name">Enter your name: </p>
        <span>Username: &nbsp; <input type="text" class="usernameInput" maxlength="15">
        </span>
        <span>Password: &nbsp; <input type="password" class="usernameInput" maxlength="18">
        </span>
        <button class="play">
          <div class="startBtn animate__animated animate__pulse animate__infinite unpressed"></div>
        </button>
        <span class="online-text-searching">Finding an opponent</span>

      </div>

    </div>

    <!-- Loading Clouds -->
    <div class="loading-clouds-noBK-overlay d-none animate__animated animate__slower 3s">
    </div>
  </div>

  <!-- <audio controls autoplay>
  <source src="\assets\music\Itty-Bitty-8-Bit-Music.mp3" type="audio/mp3">
</audio> -->
  <!-- JavaScript -->
  <!-- App -->
  <%- include('_partials/commonJsFooters.ejs') -%>
</body>

</html>